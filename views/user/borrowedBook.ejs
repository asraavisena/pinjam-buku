<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Borrowed Books</title>
</head>
<body>
    <%- include("../components/navbar.ejs") %>
    <% if(!isAdmin) { %>
    <h1>List borrowed Books</h1>
    <table border="2px">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% data.Books.forEach(el => { %>
                <tr>
                    <td><%= el.name %></td>
                    <td><%= el.category %></td>
                    <td><a href="/user/return/<%= el.id %>">Return</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <p>You have no access to this site</p>
    <% } %>
</body>
</html>